<UserControl x:Class="CEEdit.UI.Views.UserControls.ItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CEEdit;component/src/CEEdit.UI/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧编辑区域 -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Background="{StaticResource BackgroundBrush}">
            <StackPanel Margin="12,8,8,8">
                
                <!-- 基础信息 -->
                <GroupBox Header="基础信息" Style="{StaticResource ModernGroupBoxStyle}">
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 物品ID -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding Item.Id, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="物品的唯一标识符，只能包含小写字母、数字和下划线"
                                 Margin="0,0,8,6"/>
                        
                        <!-- 显示名称 -->
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="显示名称:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                 Text="{Binding Item.DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="在游戏中显示的物品名称"
                                 Margin="0,0,0,6"/>

                        <!-- 物品类型 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="类型:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  SelectedItem="{Binding Item.Type}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  ItemsSource="{Binding AvailableItemTypes}"
                                  ToolTip="选择物品的类型"
                                  Margin="0,0,8,6"/>
                        
                        <!-- 稀有度 -->
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="稀有度:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="3"
                                  SelectedItem="{Binding Item.Rarity}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  ItemsSource="{Binding AvailableRarities}"
                                  ToolTip="物品的稀有度等级"
                                  Margin="0,0,0,6"/>

                        <!-- 最大堆叠数-->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="堆叠数" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Item.MaxStackSize, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="物品的最大堆叠数"
                                 Margin="0,0,8,6"/>
                        
                        <!-- 耐久度-->
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="耐久度" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="2" Grid.Column="3" 
                                 Text="{Binding Item.Durability, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="物品的最大耐久度，0表示不可损坏"
                                 Margin="0,0,0,6"/>

                        <!-- 纹理文件 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="纹理:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding Item.Texture, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     ToolTip="物品图标纹理文件路径"/>
                            <Button Grid.Column="1" Content="浏览" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding BrowseTextureCommand}" 
                                    Margin="4,0,0,0"/>
                            <Button Grid.Column="2" Content="建模" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding LaunchBlockbenchCommand}" 
                                    Margin="4,0,0,0"
                                    ToolTip="使用Blockbench进行3D建模"/>
                        </Grid>
                        
                        <!-- 描述 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="描述:" 
                                   Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Top" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                                 Text="{Binding Item.Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinLines="2" MaxLines="4"
                                 ToolTip="物品的详细描述信息"/>
                    </Grid>
                </GroupBox>

                <!-- 特殊属性-->
                <GroupBox Header="特殊属性" Style="{StaticResource ModernGroupBoxStyle}">
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左列 -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <CheckBox Content="无法破坏" 
                                      IsChecked="{Binding Item.Properties.Unbreakable}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      ToolTip="物品永远不会损坏"/>
                            <CheckBox Content="隐藏附魔" 
                                      IsChecked="{Binding Item.Properties.HideEnchants}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      ToolTip="隐藏物品上的附魔信息"/>
                            <CheckBox Content="发光效果" 
                                      IsChecked="{Binding Item.Properties.HasGlint}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      ToolTip="添加类似附魔的发光效果"/>
                        </StackPanel>
                        
                        <!-- 右列 -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="模型ID:" 
                                           Style="{StaticResource BodyTextStyle}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                         Text="{Binding Item.CustomModelData, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         ToolTip="用于资源包自定义模型的ID" Margin="0,0,0,6"/>
                                
                                <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                          Content="此物品是食物" 
                                          IsChecked="{Binding Item.IsFood}"
                                          Style="{StaticResource ModernCheckBoxStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,8">
                    <Button Content="重置" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ResetCommand}" Margin="0,0,4,0"/>
                    <Button Content="预览" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding PreviewCommand}" Margin="0,0,4,0"/>
                    <Button Content="保存" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 分隔线-->
        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" 
                      Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>
        
        <!-- 右侧面板 -->
        <Grid Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>
            
            <!-- Lore编辑标题 -->
            <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <TextBlock Text="Lore配置" Style="{StaticResource BodyTextStyle}" 
                           Margin="12,8"/>
            </Border>
            
            <!-- Lore编辑区域 -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 工具栏-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="添加" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding AddLoreLineCommand}"/>
                    <Button Content="删除" 
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding RemoveLoreLineCommand}" Margin="4,0,0,0"/>
                </StackPanel>
                
                <!-- Lore列表 -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Item.Lore}"
                         SelectedItem="{Binding SelectedLoreLine}"
                         SelectedIndex="{Binding SelectedLoreIndex}"
                         Style="{StaticResource ModernListBoxStyle}"
                         ItemContainerStyle="{StaticResource ModernListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding ., UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Margin="0"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- 颜色代码提示 -->
                <TextBlock Grid.Row="2" 
                           Text="颜色代码: &amp;a绿色, &amp;c红色, &amp;b青色" 
                           Style="{StaticResource SecondaryTextStyle}" 
                           Margin="0,8,0,0" TextWrapping="Wrap"/>
            </Grid>
            
            <!-- 预览标题 -->
            <Border Grid.Row="2" Background="{StaticResource TertiaryBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1">
                <TextBlock Text="物品预览" Style="{StaticResource BodyTextStyle}" 
                           Margin="12,8"/>
            </Border>
            
            <!-- 预览区域 -->
            <Border Grid.Row="3" Background="{StaticResource BackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="1" 
                            Width="64" Height="64" 
                            Margin="8">
                        <Image Source="{Binding Item.Texture}" Stretch="Fill"/>
                    </Border>
                    <TextBlock Text="{Binding Item.DisplayName}" 
                               Style="{StaticResource BodyTextStyle}" 
                               HorizontalAlignment="Center" 
                               Margin="4"/>
                    <TextBlock Text="{Binding Item.Type}" 
                               Style="{StaticResource SecondaryTextStyle}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
