<UserControl x:Class="CEEdit.UI.Views.UserControls.ResourceManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CEEdit;component/src/CEEdit.UI/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="{StaticResource DefaultMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧工具 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="导入文件" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ImportFilesCommand}" Margin="0,0,8,0"/>
                    <Button Content="新建文件夹" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding CreateFolderCommand}" Margin="0,0,8,0"/>
                    
                    <Separator Background="{StaticResource BorderBrush}" Width="1" Margin="8,4"/>
                    
                    <Button Content="删除" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding DeleteSelectedCommand}" Margin="8,0,4,0"/>
                    <Button Content="重命名" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding RenameSelectedCommand}" Margin="0,0,8,0"/>
                    
                    <Separator Background="{StaticResource BorderBrush}" Width="1" Margin="8,4"/>
                    
                    <Button Content="优化资源" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding OptimizeResourcesCommand}" Margin="8,0,4,0"/>
                    <Button Content="验证资源" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ValidateResourcesCommand}" Margin="0,0,8,0"/>
                </StackPanel>
                
                <!-- 右侧搜索 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="搜索:" Style="{StaticResource BodyTextStyle}" 
                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Width="200" 
                             ToolTip="搜索文件和文件夹"/>
                    <ComboBox SelectedItem="{Binding FileTypeFilter}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="120" Margin="8,0,0,0"
                              ToolTip="文件类型筛选">
                        <ComboBoxItem Content="所有文件"/>
                        <ComboBoxItem Content="纹理文件"/>
                        <ComboBoxItem Content="模型文件"/>
                        <ComboBoxItem Content="音效文件"/>
                        <ComboBoxItem Content="语言文件"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主内容区-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧文件夹树 -->
            <GroupBox Grid.Column="0" Header="文件夹树" Style="{StaticResource ModernGroupBoxStyle}">
                <TreeView ItemsSource="{Binding FolderTree}"
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged"
                          Style="{StaticResource ModernTreeViewStyle}"
                          ItemContainerStyle="{StaticResource ModernTreeViewItemStyle}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource FolderIconGlyph}" 
                                           Style="{StaticResource TreeViewIconStyle}"/>
                                <TextBlock Text="{Binding Name}" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="{Binding FileCount, StringFormat='({0})'}" 
                                           Style="{StaticResource SecondaryTextStyle}" 
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>
            
            <!-- 分隔线-->
            <GridSplitter Grid.Column="1" Width="4" 
                          Background="{StaticResource BorderBrush}" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"/>
            
            <!-- 中央文件列表 -->
            <GroupBox Grid.Column="2" Header="文件列表" Style="{StaticResource ModernGroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 工具栏-->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <ToggleButton Content="列表视图" IsChecked="{Binding IsListView}"
                                      Style="{StaticResource ModernToggleButtonStyle}" Margin="0,0,4,0"/>
                        <ToggleButton Content="缩略图视图" IsChecked="{Binding IsThumbnailView}"
                                      Style="{StaticResource ModernToggleButtonStyle}" Margin="0,0,16,0"/>
                        
                        <TextBlock Text="排序:" Style="{StaticResource BodyTextStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox SelectedItem="{Binding SortBy}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  Width="120">
                            <ComboBoxItem Content="名称"/>
                            <ComboBoxItem Content="类型"/>
                            <ComboBoxItem Content="大小"/>
                            <ComboBoxItem Content="修改时间"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- 文件列表 -->
                    <Grid Grid.Row="1">
                        <!-- 列表视图 -->
                        <DataGrid ItemsSource="{Binding FilteredFiles}"
                                  SelectedItem="{Binding SelectedFile}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  RowStyle="{StaticResource ModernDataGridRowStyle}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                  Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="大小" Binding="{Binding SizeFormatted}" Width="80"/>
                                <DataGridTextColumn Header="修改时间" Binding="{Binding ModifiedDate}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- 缩略图视图 -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="{Binding IsThumbnailView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding FilteredFiles}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="8"
                                                Margin="4"
                                                Width="120"
                                                Height="140">
                                            <StackPanel>
                                                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                                        Width="80" Height="80"
                                                        CornerRadius="4">
                                                    <Image Source="{Binding ThumbnailPath}" 
                                                           Stretch="UniformToFill"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" 
                                                           Style="{StaticResource BodyTextStyle}"
                                                           TextAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,4,0,0"/>
                                                <TextBlock Text="{Binding SizeFormatted}" 
                                                           Style="{StaticResource SecondaryTextStyle}"
                                                           TextAlignment="Center"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </GroupBox>
            
            <!-- 分隔线-->
            <GridSplitter Grid.Column="3" Width="4" 
                          Background="{StaticResource BorderBrush}" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"/>
            
            <!-- 右侧属性面板-->
            <GroupBox Grid.Column="4" Header="属性" Style="{StaticResource ModernGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="{StaticResource DefaultMargin}">
                        
                        <!-- 文件信息 -->
                        <GroupBox Header="文件信息" Style="{StaticResource ModernGroupBoxStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="文件名称" Style="{StaticResource BodyTextStyle}" Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedFile.Name}" Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="类型:" Style="{StaticResource BodyTextStyle}" Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFile.Type}" Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="大小:" Style="{StaticResource BodyTextStyle}" Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFile.SizeFormatted}" Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="修改时间:" Style="{StaticResource BodyTextStyle}" Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFile.ModifiedDate}" Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="路径:" Style="{StaticResource BodyTextStyle}" Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedFile.FullPath}" 
                                           Style="{StaticResource BodyTextStyle}" 
                                           TextWrapping="Wrap" Margin="0,0,0,4"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- 预览 -->
                        <GroupBox Header="预览" Style="{StaticResource ModernGroupBoxStyle}">
                            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    Height="200"
                                    CornerRadius="4">
                                <Grid>
                                    <!-- 图片预览 -->
                                    <Image Source="{Binding SelectedFile.FullPath}" 
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Visibility="{Binding SelectedFile.IsImage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- 文本预览 -->
                                    <TextBox Text="{Binding SelectedFile.TextPreview}" 
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             FontFamily="{StaticResource CodeFontFamily}"
                                             FontSize="{StaticResource SmallFontSize}"
                                             Visibility="{Binding SelectedFile.IsText, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- 默认图标 -->
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Visibility="{Binding SelectedFile.ShowDefaultIcon, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource FileIconGlyph}" 
                                                   Style="{StaticResource FileIconStyle}"
                                                   FontSize="48" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding SelectedFile.Type}" 
                                                   Style="{StaticResource SecondaryTextStyle}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </GroupBox>
                        
                        <!-- 操作按钮 -->
                        <StackPanel Margin="0,16,0,0">
                            <Button Content="在资源管理器中显示" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding ShowInExplorerCommand}"
                                    HorizontalAlignment="Stretch" Margin="0,0,0,4"/>
                            <Button Content="复制文件路径" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding CopyPathCommand}"
                                    HorizontalAlignment="Stretch" Margin="0,0,0,4"/>
                            <Button Content="导出文件" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Command="{Binding ExportFileCommand}"
                                    HorizontalAlignment="Stretch" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        
        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="{StaticResource DefaultMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource BodyTextStyle}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding TotalFilesCount, StringFormat=\{0\} 个文件}" 
                               Style="{StaticResource SecondaryTextStyle}" 
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding TotalSize}" 
                               Style="{StaticResource SecondaryTextStyle}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
