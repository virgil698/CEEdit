<Window x:Class="CEEdit.UI.Views.Windows.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="新建项目 - CEEdit" 
        Height="850" Width="1150"
        MinHeight="900" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        ShowInTaskbar="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CEEdit;component/src/CEEdit.UI/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- IDEA风格的表单标签样式 -->
            <Style x:Key="FormLabelStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            
            <!-- IDEA风格的表单输入框样式 -->
            <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                <Setter Property="Padding" Value="8,8"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
                <Setter Property="MinHeight" Value="32"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>
            
            <!-- 项目模板项样式 -->
            <Style x:Key="TemplateItemStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Margin" Value="4,2"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"
                                                Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource SelectedBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 浏览按钮样式 -->
            <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="8,0,0,0"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="MinWidth" Value="80"/>
            </Style>
            
        </ResourceDictionary>
    </Window.Resources>
    
    <!-- 主布局容器 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="0" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="280"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="450"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧项目模板选择 -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SecondaryBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 模板选择标题 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="0,0,0,1"
                            Padding="16,12">
                        <TextBlock Text="项目模板" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}"/>
                    </Border>
                    
                    <!-- 模板列表 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                        <StackPanel>
                            <TextBlock Text="基础模板" FontSize="11" FontWeight="Medium" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       Margin="8,8,8,4"/>
                            
                            <Button Style="{StaticResource TemplateItemStyle}" 
                                    x:Name="BasicTemplateButton"
                                    Click="TemplateButton_Click" 
                                    Tag="basic">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="📄" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="基础插件" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="创建一个基础的CraftEngine插件项目" 
                                               FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource TemplateItemStyle}" 
                                    x:Name="AdvancedTemplateButton"
                                    Click="TemplateButton_Click" 
                                    Tag="advanced">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="🚀" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="高级插件" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="包含示例方块、物品和配方的完整项目" 
                                               FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                            
                            <Separator Style="{StaticResource SeparatorStyle}" Margin="8,12"/>
                            
                            <TextBlock Text="专项模板" FontSize="11" FontWeight="Medium" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       Margin="8,8,8,4"/>
                            
                            <Button Style="{StaticResource TemplateItemStyle}" 
                                    x:Name="BlockTemplateButton"
                                    Click="TemplateButton_Click" 
                                    Tag="blocks">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="🧱" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="方块包" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="专注于自定义方块的插件项目" 
                                               FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource TemplateItemStyle}" 
                                    x:Name="ItemTemplateButton"
                                    Click="TemplateButton_Click" 
                                    Tag="items">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="🎒" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="物品包" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="专注于自定义物品的插件项目" 
                                               FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource TemplateItemStyle}" 
                                    x:Name="RecipeTemplateButton"
                                    Click="TemplateButton_Click" 
                                    Tag="recipes">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="⚗️" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="配方包" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="专注于合成配方的插件项目" 
                                               FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" 
                          Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>
            
            <!-- 右侧项目配置 -->
            <Grid Grid.Column="2" Background="{StaticResource BackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 配置标题 -->
                <Border Grid.Row="0" 
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="0,0,0,1"
                        Padding="20,12">
                    <StackPanel>
                        <TextBlock Text="项目设置" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="TemplateDescriptionText" 
                                   Text="请选择一个项目模板以开始配置" 
                                   FontSize="12" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 配置表单 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- 项目名称 -->
                        <TextBlock Text="项目名称 *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="ProjectNameTextBox" 
                                 Style="{StaticResource FormTextBoxStyle}"
                                 Text="MyPlugin"
                                 TextChanged="ProjectNameTextBox_TextChanged"/>
                        
                        <!-- 项目位置 -->
                        <TextBlock Text="项目位置 *" Style="{StaticResource FormLabelStyle}"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ProjectLocationTextBox" 
                                     Grid.Column="0"
                                     Style="{StaticResource FormTextBoxStyle}"
                                     Margin="0"/>
                            <Button Grid.Column="1" 
                                    Style="{StaticResource BrowseButtonStyle}" 
                                    Content="浏览..." 
                                    Click="BrowseLocationButton_Click"/>
                        </Grid>
                        
                        <!-- 项目版本 -->
                        <TextBlock Text="版本" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="ProjectVersionTextBox" 
                                 Style="{StaticResource FormTextBoxStyle}"
                                 Text="1.0.0"/>
                        
                        <!-- 作者 -->
                        <TextBlock Text="作者" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="ProjectAuthorTextBox" 
                                 Style="{StaticResource FormTextBoxStyle}"
                                 Text=""/>
                        
                        <!-- 项目描述 -->
                        <TextBlock Text="描述" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="ProjectDescriptionTextBox" 
                                 Style="{StaticResource FormTextBoxStyle}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="80"
                                 VerticalScrollBarVisibility="Auto"
                                 Text=""/>
                        
                        <!-- 启用状态 -->
                        <CheckBox x:Name="ProjectEnabledCheckBox" 
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="启用插件（创建后自动启用）" 
                                  IsChecked="True"
                                  Margin="0,8"/>
                        
                        <!-- 高级设置 -->
                        <Expander Header="高级设置" 
                                  FontSize="13" 
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,16,0,0">
                            <StackPanel Margin="0,8,0,0">
                                
                                <!-- Git 仓库 -->
                                <CheckBox x:Name="InitGitCheckBox" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          Content="初始化 Git 仓库" 
                                          IsChecked="False"
                                          Margin="0,4"/>
                                
                                <!-- 示例代码 -->
                                <CheckBox x:Name="AddSampleCodeCheckBox" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          Content="添加示例代码和资源" 
                                          IsChecked="True"
                                          Margin="0,4"/>
                                
                                <!-- README 文件 -->
                                <CheckBox x:Name="CreateReadmeCheckBox" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          Content="创建 README.md 文件" 
                                          IsChecked="True"
                                          Margin="0,4"/>
                                
                            </StackPanel>
                        </Expander>
                        
                    </StackPanel>
                </ScrollViewer>
                
                <!-- 模板预览区域 -->
                <Border Grid.Row="2" 
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="0,1,0,0"
                        Padding="20,16"
                        Height="180">
                    <StackPanel>
                        <TextBlock Text="模板预览" FontSize="12" FontWeight="Medium" 
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                            <TextBlock x:Name="TemplatePreviewText" 
                                       Text="选择项目模板以查看预览和文件结构信息..."
                                       FontSize="11" 
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
            </Grid>
        </Grid>
        
        <!-- 底部按钮栏 -->
        <Border Grid.Row="1" 
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧状态信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🚀" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" 
                               Text="准备创建新项目..." 
                               FontSize="12" 
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
                
                <!-- 右侧按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="CancelButton" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="取消" 
                            Click="CancelButton_Click"
                            MinWidth="80"
                            Margin="0,0,8,0"/>
                    <Button Name="CreateButton" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="创建项目" 
                            Click="CreateButton_Click"
                            MinWidth="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
