<Window x:Class="CEEdit.UI.Views.Windows.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CEEdit - CraftEngine 插件编辑器" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CEEdit;component/src/CEEdit.UI/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <!-- VSCode 风格的三栏布局 -->
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48"/>   <!-- Activity Bar -->
            <ColumnDefinition Width="300"/>  <!-- Sidebar -->
            <ColumnDefinition Width="*"/>    <!-- Main Content -->
        </Grid.ColumnDefinitions>
        
        <!-- 左侧活动栏(Activity Bar) -->
        <Border Grid.Column="0" Background="{StaticResource TertiaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel>
                <Button Style="{StaticResource ActivityBarButtonStyle}" 
                        Command="{Binding ShowRecentProjectsCommand}"
                        ToolTip="最近项目">
                    <Grid>
                        <Ellipse Width="24" Height="24" Fill="{StaticResource AccentBrush}"/>
                        <TextBlock Text="📁" FontSize="14" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>
                
                <Button Style="{StaticResource ActivityBarButtonStyle}" 
                        Command="{Binding ShowTemplatesCommand}"
                        ToolTip="项目模板">
                    <Grid>
                        <Ellipse Width="24" Height="24" Fill="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="📋" FontSize="14" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>
                
                <Button Style="{StaticResource ActivityBarButtonStyle}" 
                        Command="{Binding ShowSettingsCommand}"
                        ToolTip="设置">
                    <Grid>
                        <Ellipse Width="24" Height="24" Fill="{StaticResource SecondaryTextBrush}"/>
                        <TextBlock Text="⚙️" FontSize="14" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- 侧边栏-->
        <Grid Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 侧边栏标题-->
            <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" Margin="16,12">
                    <TextBlock Text="CEEdit" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="CraftEngine 插件编辑器" FontSize="11" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- 侧边栏内容-->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    
                    <!-- 开始部分-->
                    <TextBlock Text="开始" FontSize="11" FontWeight="Medium" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               Margin="8,16,8,8"/>
                    
                    <Button Style="{StaticResource SidebarItemStyle}"
                            Command="{Binding NewProjectCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="新建项目"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource SidebarItemStyle}"
                            Command="{Binding OpenProjectCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="打开项目"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource SidebarItemStyle}"
                            Command="{Binding CloneRepositoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌐" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="克隆仓库"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- 最近项目-->
                    <TextBlock Text="最近项目" FontSize="11" FontWeight="Medium" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               Margin="8,24,8,8"/>
                    
                    <ItemsControl ItemsSource="{Binding RecentProjects}" Margin="0,0,0,16">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource RecentProjectItemStyle}"
                                        Command="{Binding DataContext.OpenRecentProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="12" 
                                                   FontWeight="Medium" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding Path}" FontSize="10" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- 学习资源 -->
                    <TextBlock Text="学习" FontSize="11" FontWeight="Medium" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               Margin="8,16,8,8"/>
                    
                    <Button Style="{StaticResource SidebarItemStyle}"
                            Command="{Binding ShowDocumentationCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📖" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="用户手册"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource SidebarItemStyle}"
                            Command="{Binding ShowSamplesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧪" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="示例项目"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- 主内容区-->
        <Grid Grid.Column="2" Background="{StaticResource BackgroundBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel MaxWidth="800" HorizontalAlignment="Center" Margin="40,60,40,40">
                    
                    <!-- 欢迎标题 -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                        <TextBlock Text="欢迎使用 CEEdit" FontSize="32" FontWeight="Light" 
                                   HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="强大、CraftEngine 插件可视化编辑器" FontSize="16" 
                                   HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                    
                    <!-- 快速操作卡片-->
                    <Border Style="{StaticResource WelcomeCardStyle}">
                        <StackPanel>
                            <TextBlock Text="开始使用" FontSize="18" FontWeight="Medium" 
                                       Margin="0,0,0,16" Foreground="{StaticResource TextBrush}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 左列 -->
                                <StackPanel Grid.Column="0">
                                    <Button Style="{StaticResource QuickActionButtonStyle}"
                                            Command="{Binding NewProjectCommand}">
                                        <StackPanel>
                                            <TextBlock Text="📄" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <TextBlock Text="新建项目" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource QuickActionButtonStyle}"
                                            Command="{Binding OpenProjectCommand}">
                                        <StackPanel>
                                            <TextBlock Text="📂" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <TextBlock Text="打开项目" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                
                                <!-- 右列 -->
                                <StackPanel Grid.Column="1">
                                    <Button Style="{StaticResource QuickActionButtonStyle}"
                                            Command="{Binding ShowSamplesCommand}">
                                        <StackPanel>
                                            <TextBlock Text="🧪" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <TextBlock Text="示例项目" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource QuickActionButtonStyle}"
                                            Command="{Binding CloneRepositoryCommand}">
                                        <StackPanel>
                                            <TextBlock Text="🌐" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <TextBlock Text="克隆仓库" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- 功能介绍卡片 -->
                    <Border Style="{StaticResource WelcomeCardStyle}">
                        <StackPanel>
                            <TextBlock Text="主要功能" FontSize="18" FontWeight="Medium" 
                                       Margin="0,0,0,16" Foreground="{StaticResource TextBrush}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🧱" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="方块编辑器" FontSize="14" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="可视化编辑方块属性、纹理和物理特性" 
                                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                               TextWrapping="Wrap" Margin="0,0,0,16"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🎒" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="物品编辑器" FontSize="14" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="设计物品属性、Lore和特殊效果" 
                                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⚗️" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="配方编辑器" FontSize="14" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="创建合成配方和熔炼配方" 
                                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                               TextWrapping="Wrap" Margin="0,0,0,16"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="📦" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="插件打包" FontSize="14" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="一键导出完整的插件" 
                                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
