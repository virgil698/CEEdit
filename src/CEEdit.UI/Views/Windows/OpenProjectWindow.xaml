<Window x:Class="CEEdit.UI.Views.Windows.OpenProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="打开项目 - CEEdit" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        ShowInTaskbar="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CEEdit;component/src/CEEdit.UI/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 项目卡片样式 -->
            <Style x:Key="ProjectCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 路径文本框样式 -->
            <Style x:Key="PathTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                <Setter Property="FontFamily" Value="{StaticResource CodeFontFamily}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
            </Style>
            
        </ResourceDictionary>
    </Window.Resources>
    
    <!-- 主布局 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{StaticResource TertiaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="打开项目" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="选择一个CraftEngine项目文件夹" FontSize="12" 
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="BrowseFolderButton" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="浏览文件夹..." 
                            Click="BrowseFolderButton_Click"
                            Margin="0,0,8,0"/>
                    <Button Name="RefreshButton" 
                            Style="{StaticResource IconButtonStyle}" 
                            Content="🔄" 
                            ToolTip="刷新"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：最近项目和项目列表 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200" MinHeight="150"/>
                </Grid.RowDefinitions>
                
                <!-- 当前路径 -->
                <Border Grid.Row="0" 
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="0,0,0,1"
                        Padding="16,8">
                    <StackPanel>
                        <TextBlock Text="当前位置" FontSize="11" FontWeight="Medium" 
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="CurrentPathTextBox" 
                                 Style="{StaticResource PathTextBoxStyle}"
                                 Text="C:\Users\Username\Documents\CEEdit Projects"/>
                    </StackPanel>
                </Border>
                
                <!-- 项目列表 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ProjectListPanel" Margin="12">
                        <TextBlock Text="在此文件夹中未找到任何CraftEngine项目" 
                                   FontSize="12" 
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="20"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- 分隔符 -->
                <GridSplitter Grid.Row="2" Height="1" HorizontalAlignment="Stretch" 
                              Background="{StaticResource BorderBrush}"/>
                
                <!-- 最近项目 -->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="0,0,0,1"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="最近项目" FontSize="12" FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="RecentProjectsControl" Margin="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource RecentProjectItemStyle}"
                                            Click="RecentProject_Click"
                                            Tag="{Binding Path}">
                                        <StackPanel Margin="8">
                                            <TextBlock Text="{Binding Name}" FontSize="12" 
                                                       FontWeight="Medium" Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding Path}" FontSize="10" 
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding LastAccessed, StringFormat='最后打开: {0:yyyy-MM-dd HH:mm}'}" 
                                                       FontSize="9" 
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
            
            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" 
                          Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>
            
            <!-- 右侧：项目预览 -->
            <Grid Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 预览标题 -->
                <Border Grid.Row="0" 
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="0,0,0,1"
                        Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👁️" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="项目预览" FontSize="12" FontWeight="Medium" 
                                   Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- 预览内容 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel x:Name="ProjectPreviewPanel">
                        <!-- 默认状态 -->
                        <StackPanel x:Name="EmptyPreviewPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                            <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"
                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="选择项目以查看详细信息" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 项目信息面板（初始隐藏） -->
                        <StackPanel x:Name="ProjectInfoPanel" Visibility="Collapsed">
                            <TextBlock Text="项目信息" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="名称:" FontWeight="Medium" Margin="0,0,8,6"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ProjectNameText" Text="--" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="版本:" FontWeight="Medium" Margin="0,0,8,6"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProjectVersionText" Text="--" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="作者:" FontWeight="Medium" Margin="0,0,8,6"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ProjectAuthorText" Text="--" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="描述:" FontWeight="Medium" Margin="0,0,8,6" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ProjectDescriptionText" Text="--" 
                                           TextWrapping="Wrap" Margin="0,0,0,12"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="路径:" FontWeight="Medium" Margin="0,0,8,6" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ProjectPathText" Text="--" 
                                           TextWrapping="Wrap" FontFamily="{StaticResource CodeFontFamily}" 
                                           FontSize="10" Margin="0,0,0,12"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="状态:" FontWeight="Medium" Margin="0,0,8,6"/>
                                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                                    <Ellipse x:Name="ProjectStatusIndicator" Width="8" Height="8" 
                                             Fill="{StaticResource SuccessBrush}" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="ProjectStatusText" Text="有效项目" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                            
                            <Separator Style="{StaticResource SeparatorStyle}" Margin="0,16"/>
                            
                            <TextBlock Text="项目统计" FontSize="12" FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                            
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="🧱" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="BlockCountText" Text="0 个方块" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="🎒" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="ItemCountText" Text="0 个物品" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="⚗️" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="RecipeCountText" Text="0 个配方" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- 底部按钮栏 -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧状态信息 -->
                <TextBlock x:Name="StatusText" Grid.Column="0"
                           Text="选择一个项目文件夹以开始..." 
                           FontSize="12" 
                           Foreground="{StaticResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
                
                <!-- 右侧按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="CancelButton" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="取消" 
                            Click="CancelButton_Click"
                            MinWidth="80"
                            Margin="0,0,8,0"/>
                    <Button Name="OpenButton" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="打开项目" 
                            Click="OpenButton_Click"
                            MinWidth="120"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
